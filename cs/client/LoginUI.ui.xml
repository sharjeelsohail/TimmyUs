<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel ui:field="usernamePanel">
			<g:Label ui:field="usernameLabel" />
			<g:TextBox ui:field="usernameField" />
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="passwordPanel">
			<g:Label ui:field="passwordLabel" />
			<g:PasswordTextBox ui:field="passwordField" />
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="submitPanel">
			<g:Button styleName="{style.important}" ui:field="submitButton" />
		</g:HorizontalPanel>
		<g:HorizontalPanel ui:field="statusPanel">
			<g:Label ui:field="statusLabel" />
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 